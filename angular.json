{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "defaultProject": "ng-boilerplate",
  "projects": {
    "ng-boilerplate": {
      "root": "src/angular",
      "sourceRoot": "src/angular/src",
      "projectType": "library",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "config/angular/module/tsconfig.lib.json",
            "project": "src/angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "src/angular/ng-package.json"
            },
            "development": {
              "project": "src/angular/ng-package.dev.json"
            }
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "../../config/angular/module/jest.config.js",
            "no-cache": true,
            "reporters": ["jest-junit"]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tslintConfig": "config/angular/module/tslint.json",
            "tsConfig": [
              "config/angular/module/tsconfig.lib.json",
              "config/angular/module/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "sandbox": {
      "root": "",
      "sourceRoot": "sandbox",
      "projectType": "application",
      "prefix": "",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/ng-sandbox",
            "index": "sandbox/index.html",
            "main": "sandbox/main.ts",
            "polyfills": "sandbox/polyfills.ts",
            "tsConfig": "config/angular/sandbox/tsconfig.app.json",
            "assets": [
              "sandbox/favicon.ico",
              "sandbox/assets"
            ],
            "styles": [
              "sandbox/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "sandbox/environments/environment.ts",
                  "with": "sandbox/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 8000,
            "browserTarget": "sandbox:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "sandbox:build:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tslintConfig": "config/angular/sandbox/tslint.json",
            "tsConfig": [
              "config/angular/sandbox/tsconfig.app.json",
              "config/angular/sandbox/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  }
}
